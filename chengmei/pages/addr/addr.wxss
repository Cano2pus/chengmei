/* pages/addr/addr.wxss */
page{
  height: 100%;
}
.container{
  background-color: #f1f1f1;
  display: block;
}
.bottom{
  height: 50px;
  background-color: red;
  color: white;
  line-height: 50px;
  text-align: center;
  font-size: 16px;
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
}


.list{
  width: 100%;
}
.list .item{
  font-size: 16px;
  line-height: 2;
  color: #333;
  width: 100%;
  box-sizing: border-box;
  position: relative;
  background-color: #fff;
  margin-bottom: 10px;
}
.list .item .info text{
  display: inline-block;
  width: 90px;
  text-align: right;
}
.list .phone{
  position: absolute;
  top: 10px;
  right: 10px;
}
.list .opertion{
  display: flex;
  justify-content: space-between;
  border-top: 1px solid #eee;
  padding: 8px;
  margin-top: 10px;
}
.list .opertion>view{
  display: flex;
}
.list .opertion>view view{
  margin: 0 10px;
}