/* pages/list/list.wxss */
page{
  min-height: 100%;
  background-color: #f1f1f1;
}
.container{
  padding-bottom: 0;
}
.scroll-top{
  border-bottom: 1px solid #f1f1f1;
  white-space: nowrap;
  height: 40px;
  background-color: #fff;
}
.scroll-top view{
  display: inline-block;
  margin: 0 10px;
  font-size: 15px;
  color: #333;
  line-height: 40px;
}
.scroll-top view.curr{
  color: red;
}

.top{
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
}
.filter{
  width: 100%;
  display: flex;
  justify-content: space-around;
  background-color: #fff;
  border-top: 1px solid #f1f1f1;
  padding: 5px 0;
}
.filter text{
  font-size: 14px;
  color: #333;
}
.filter .curr{
  color: red;
}

.priceitem{
  position: relative;
}
.priceitem::after, .priceitem::before{
  content: "";
  border: 5px solid #ccc;
  position: absolute;
  border-left-color: transparent;
  border-right-color: transparent;
  right: -16px;
}
.priceitem::after{
  bottom: -2px;
  border-bottom-color: transparent;
}
.priceitem::before{
  top: -2px;
  border-top-color: transparent;
}
.asc::before{
  border-bottom-color: red;
}
.desc::after{
  border-top-color: red;
}

.listbox{
  width: 100%;
  background-color: #f1f1f1;
  padding-bottom: 20px;
  margin-top: 72px;
}
.list-item{
  width: 50%;
  display: inline-block;
}
.list-item image{
  width: 100%;
  height: 200px;
}
.list-itembox{
  margin: 5px;
  background-color: #fff;
  padding: 10px;
}

.good-name{
  font-size: 15px;
  color: #333;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
}
.good-price{
  color: red;
  margin-top: 10px;
  font-size: 16px;
}